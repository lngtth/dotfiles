! fonts
Xft.dpi: 96
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault

! cursors
xcursor.theme: Vanilla-DMZ
xcursor.size: 10W

! screensaver
xscreensaver.fade: false
xscreensaver.unfade: false

! urxvt
URxvt*loginShell: true
URxvt*scrollBar: false
URxvt*font: xft:Terminus:size=10,xft:monospace:size=10
URxvt*internalBorder: 16
URxvt*transparent: false
URxvt*depth: 24
URxvt*scrollTtyKeypress: true
URxvt*scrollTtyOutput: false
URxvt*fading: false

URxvt*highlightColor: #3b758c
URxvt*highlightTextColor: #43a5d5
URxvt*colorUL: #00ffff
URxvt*underlineColor: #00ffff

URxvt.urgentOnBell: true
URxvt.url-launcher: /usr/bin/w3m
URxvt.matcher.button: 1
URxvt*perl-ext:
URxvt*perl-ext-common:

